<li>
  <div class="ellipsis hover-parent">
    <a href="#" title={{format-tag-ns node.tag}} {{action click-node-title node}}>{{strip-tag-ns node.tag}}</a>
    <span class="hover">
      <a title="Add a child node" {{action add-child-node node}} role="button">
        <svg viewBox="0 0 24 24" class="icon small">
          <path
            d="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M13,7H11V11H7V13H11V17H13V13H17V11H13V7Z"
          />
        </svg>
      </a>
      <a title="Remove this node" {{action remove-node parent node}} role="button">
        <svg viewBox="0 0 24 24" class="icon small">
          <path
            d="M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7,13H17V11H7"
          />
        </svg>
      </a>
      <a title="Move the node forward" {{action move-node-forward parent node}} role="button">
        <svg viewBox="0 0 24 24" class="icon small">
          <path
            d="M12,7L17,12H14V16H10V12H7L12,7M12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20Z"
          />
        </svg>
      </a>
      <a title="Move the node backward" {{action move-node-backward parent node}} role="button">
        <svg viewBox="0 0 24 24" class="icon small">
          <path
            d="M12,17L7,12H10V8H14V12H17L12,17M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4Z"
          />
        </svg>
      </a>
    </span>
    <span class="secondary">{{node.text}}</span>
  </div>
  {{#if node.children}}
    <ul class="no-bullet" style="margin-left:1rem;">
      {{#each node.children as |child|}}{{tree-view node=child parent=node click-node-title=click-node-title add-child-node=add-child-node remove-node=remove-node move-node-forward=move-node-forward move-node-backward=move-node-backward}}{{/each}}
    </ul>
  {{/if}}
</li>
