{% extends 'base.jinja2' %}
{% import 'macros/icons.jinja2' as icons %}

{% block menubar %}
  <li role="presentation"><a href="{{ url('editor:index') }}" role="menuitem" aria-label="Repositories">{{ icons.icon('server-network') }}</a></li>
{% endblock menubar %}

{% block content %}
  <div class="grid-container help">
    <div class="grid-x grid-padding-x">
      <div class="cell small-12 medium-8 large-9">
        <h1>Help</h1>
      </div>
      <aside class="cell small-12 medium-4 large-3 margin-top">
        <div class="callout secondary">
          <h2>About</h2>
          <dl>
            <dt>Version</dt>
            <dd>{{ history[0][0] }}</dd>
            <dt>Released</dt>
            <dd>{{ history[0][1] }}</dd>
            <dt>Changes</dt>
            <dd>
              <ul class="no-bullet no-indent">
                {% for change in history[0][2] %}
                  <li class="grid-x">
                    <div class="cell shrink"><span class="show-for-sr">{{ change[0] }}</span>{{ icons.icon(change[1], {'class': 'mdi-icon margin-right'}) }}</div>
                    <div class="cell auto">{{ change[2] }}</div>
                  </li>
                {% endfor %}
                <li class="grid-x">
                  <div class="cell shrink">{{ icons.icon('dots-horizontal', {'class': 'mdi-icon margin-right'}) }}</div>
                  <div class="cell auto"><a href="{{ url('editor:changelog') }}">Full Changelog</a></div>
                </li>
              </ul>
            </dd>
          </dl>
        </div>
      </aside>
    </div>
  </div>
{% endblock content %}
